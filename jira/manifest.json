{
  "name": "JIRA ShortCut",
  "version": "4.1.0",
  "manifest_version": 2,
  "description": "Copy to clip board jira issue as 'CMD-999: Description'",
  "background": {
    "scripts": ["js/bg.js", "js/config.js"]
  },
  "permissions" : [
    "tabs",
    "background"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Copy",
    "default_popup": "popup.html"
  },
  "options_page" : "options.html"
}
